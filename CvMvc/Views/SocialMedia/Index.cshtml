@using CvMvc.Models.Entity
@model List<TblSocialMedia>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Social Media Account List</h3>
                            </div>
                            <div class="card-body">
                                <button class="btn btn-info" data-toggle="modal" data-target="#Modal1">Add New Social Media Account</button>
                                <br />
                                <br />
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th style="width: 10px">#</th>
                                            <th>Social Media</th>
                                            <th>Edit</th>
                                            <th>Delete</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var x in Model)
                                        {
                                            
                                            <tr>
                                                <td>@x.ID</td>
                                                <td>@x.Name</td>
                                                <td>@x.Status</td>

                                                <td>
                                                    <a class="btn btn-info btn-sm" href="/SocialMedia/GetSocialMedia/@x.ID"><i class="fas fa-pencil-alt"></i>Edit</a>
                                                </td>
                                                <td>
                                                    <a class="btn btn-danger btn-sm" href="/SocialMedia/DeleteSocialMedia/@x.ID"><i class="fas  fa-trash"></i>Delete</a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <div class="modal" id="Modal1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h2 class="modal-title">Adding Social Media Account Panel</h2>
                    </div>
                    <form method="post" action="/SocialMedia/AddSocialMedia">
                        <div class="modal-body">
                            <label>Social Media Name</label>
                            <input type="text" name="Name" class="form-control" />
                            <label>Social Media Link</label>
                            <input type="text" name="Link" class="form-control" />
                            <label>Icon</label>
                            <input type="text" name="Icon" class="form-control" />
                            <br />
                            <button class="btn btn-info">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

