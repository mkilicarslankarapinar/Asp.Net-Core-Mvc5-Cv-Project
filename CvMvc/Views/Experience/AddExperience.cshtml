
@{
    ViewBag.Title = "AddExperience";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h4>Add New Experience Page</h4>
<br />
<form method="post">
    <label>Header</label>
    <input type="text" name="Header" class="form-control" placeholder="Write The Title" />
    <br />
    <input type="text" name="SubHeader" class="form-control" placeholder="Subtitle" />
    <br />
    <input type="text" name="Date" class="form-control" placeholder="Working Date" />
    <br />
    <textarea placeholder="Enter your explanation" name="Explanation" class="form-control" rows="5"></textarea>
    <br />
    <button class="btn btn-info">Save</button>
</form>