@using CvMvc.Models.Entity
@model List<TblAbout>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>About Me Editing Page</h2>
<br />
<form method="post">
    @foreach (var x in Model)
    {
        <label>Name</label>
        <input type="text" name="Name" value="@x.Name" class="form-control" />
        <br />
        <label>Surname</label>
        <input type="text" name="Surname" value="@x.Surname" class="form-control" />
        <br />
        <label>Address</label>
        <input type="text" name="Address" value="@x.Address" class="form-control" />
        <br />
        <label>Telephone</label>
        <input type="text" name="Telephone" value="@x.Telephone" class="form-control" />
        <br />
        <label>Mail</label>
        <input type="text" name="Mail" value="@x.Mail" class="form-control" />
        <br />
        <label>Image</label>
        <input type="text" name="Image" value="@x.Image" class="form-control" />
        <br />
        <label>About Me</label>
        <textarea rows="5" class="form-control" name="About">@x.About</textarea>
    }
    <br />
    <button class="btn btn-success">Update</button>
</form>
