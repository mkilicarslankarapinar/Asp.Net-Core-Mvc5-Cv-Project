@using CvMvc.Models.Entity
@model List<TblMyHobbies>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Hobby Editing Page</h2>
<br />
<form method="post">
    @foreach (var x in Model)
    {
        <label>Açıklama 1</label>
        <textarea rows="5" class="form-control" name="Explanation1">@x.Explanation1</textarea>
        <label>Açıklama 2</label>
        <textarea rows="5" class="form-control" name="Explanation2">@x.Explanation2</textarea>
    }
    <br />
    <button class="btn btn-success">Update</button>
</form>
